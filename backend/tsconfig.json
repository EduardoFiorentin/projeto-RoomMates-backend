{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "moduleResolution": "Node"
    },
    "include": [
      "src/**/*",
      "src/types/yaml.d.ts"
    ],
    "exclude": ["node_modules"]
  }